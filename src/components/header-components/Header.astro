---
import Logo from "../logo/Logo.astro";
import Hamburger from "./Hamburger.astro";
import Menu from "./Menu.astro";
import type { ILink } from "./Menu.astro";

const links: ILink[] = [
  { name: "Projects", path: "/projects", btn: false },
  { name: "About", path: "/about", btn: false },
  { name: "Contact", path: "/contact", btn: true },
];
---

<header
  data-header
  x-data="{open: window.innerWidth < 768 ? false : true}"
  class="base-grid header header--hidden"
>
  <Logo />
  <Hamburger />
  <Menu links={links} />
</header>

<style style="scss">
  .header {
    height: var(--headerHeight);
    display: grid;
    grid-template-rows: repeat(2, calc(var(--headerHeight) / 2));
    overflow: hidden;

    /*******   Header Position */
    grid-column: 1 / -1;
    grid-row: 1;

    &--hidden {
      grid-template-rows: 0;
      border: solid 1px salmon;
      background: rgba(0, 100, 0, 0.3) !important;
    }

    @media (min-width: 768px) {
      position: sticky;
    }
  }
</style>
